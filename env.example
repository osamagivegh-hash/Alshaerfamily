# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:<DB_SECRET>@cluster0.xxxxx.mongodb.net/alshaer-family?retryWrites=true&w=majority

# JWT Secret Key (Generate a strong random string)
JWT_SECRET=your-jwt-secret-key


# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Optional: Set to use Cloudinary instead of local storage
USE_CLOUDINARY=true
# Optional: Cloudinary folder name (default: al-shaer-family)
CLOUDINARY_FOLDER=al-shaer-family

# Email Configuration (Optional - for contact form notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=<APP_SPECIFIC_SECRET>
EMAIL_FROM=noreply@alshaerfamily.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# News API Configuration (for Palestine news ticker)
# GNews.io API Key (free tier available at https://gnews.io/)
# GNEWS_API_KEY=your-gnews-api-key-here
# NewsAPI.org API Key (free tier available at https://newsapi.org/)
# Note: Free tier /everything endpoint only works in development
# For production, upgrade to paid tier or use GNews.io
NEWS_API_KEY=your-newsapi-key-here
# Note: Use VITE_ prefix for client-side access (e.g., VITE_GNEWS_API_KEY, VITE_NEWS_API_KEY)

# Production Settings (for deployment)
# MONGODB_URI=mongodb+srv://prod-user:<PROD_DB_SECRET>@production-cluster.xxxxx.mongodb.net/alshaer-family-prod?retryWrites=true&w=majority
# JWT_SECRET=your-production-jwt-secret
# NODE_ENV=production
