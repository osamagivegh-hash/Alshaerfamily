{
  "name": "al-shaer-family-website",
  "version": "1.0.0",
  "description": "عائلة الشاعر - Al-Sha'er Family Website",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:render": "echo 'Using optimized build command from render.yaml'",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": ["family", "arabic", "palestinian", "website"],
  "author": "Al-Sha'er Family",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
